{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} : La boutique E-commerce{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-5">
            <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">{# my-auto => classe bootstrap qui permet de centré le texte au milieu de la taille de l'image #}
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            <span class="product-page-price">{{ (product.price / 100)|number_format(2, ',','.') }} €</span>
            <hr>
            <p>{{ product.description }}</p>
            <a href="" class="btn btn-primary">Ajouter au panier</a>
        </div>
    </div>
    
   
{% endblock %}
